[Unit]
Description=Expense Tracker Flask App
After=network.target

[Service]
User=ubuntu
Group=ubuntu
WorkingDirectory=/var/www/html/expense-tracker
# we will use the drop-in override for EnvironmentFile (.env)
Environment="PATH=/var/www/html/expense-tracker/venv/bin:/usr/bin"
ExecStart=/var/www/html/expense-tracker/venv/bin/gunicorn --workers 4 --timeout 300 --bind 127.0.0.1:5000 app:app
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target